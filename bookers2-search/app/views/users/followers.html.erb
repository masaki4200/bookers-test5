<h1>Follower Users</h1>
<% @users.each do|user| %>
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>

	<tbody>
			<tr>
				<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
				<td><%= user.name%></td>
				<td>フォロー数：<%= user.followings.count %></td>
				<td>フォロワー数：<%= user.followers.count %></td>
				<td>
					<% if user.followed_by?(current_user) %>
			            <p><%=link_to "フォロー済み", user_relationships_path(user.id), method: :delete, class: "btn btn-success col-xs-5"%></p>
			        <% else %>
			            <p><%=link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-default col-xs-5" %></p>
			        <% end %>
				</td>
			</tr>
	</tbody>
</table>
<% end %>















