<h1>Follow Users</h1>
<% @users.each do|user| %>
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>

	<tbody>
			<tr>
				<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
				<td><%= user.name%></td>
				<td>フォロー数：<%= user.followings.count %></td>
				<td>フォロワー数：<%= user.followers.count %></td>
				<td>
					<% if @myUser == current_user %>
				      <%#<% user.followed_by?(current_user) %>
				        <p><%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class: "btn btn-success col-xs-5" %></p>
				    <% end %>
				</td>
			</tr>
	</tbody>
</table>
<% end %>









